<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/butBackBook"
        android:layout_width="63dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_button_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintHorizontal_bias="0.04"/>
    <Button
        android:id="@+id/butBookPlace"
        android:layout_width="243dp"
        android:layout_height="55dp"
        android:text="@string/butBookPlace"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_button_green"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.4"/>

    <Button
        android:id="@+id/butSearchFreePlace"
        android:layout_width="243dp"
        android:layout_height="55dp"
        android:text="@string/butBookPlace"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/butBookPlace"
        android:background="@drawable/background_button_green"
        android:textColor="@color/white"
        android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>