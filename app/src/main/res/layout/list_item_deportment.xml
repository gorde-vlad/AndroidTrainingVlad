<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/tvNameDeportment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="Название отдела"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/butDetails"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/background_button_green"
        android:gravity=""
        android:paddingLeft="10dp"
        android:text="@string/butDetails"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/logo_irlix"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/ic_group_65"
        app:layout_constraintBottom_toBottomOf="@id/butDetails"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintLeft_toLeftOf="@+id/butDetails"
        app:layout_constraintRight_toRightOf="@id/butDetails"
        app:layout_constraintTop_toTopOf="@id/butDetails"
        android:elevation="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>