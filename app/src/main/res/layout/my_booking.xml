<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <Button
        android:id="@+id/butBackBookCriteria"
        android:layout_width="63dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_button_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />
    <View
        android:id="@+id/nowBooking"
        android:layout_width="360dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/butBackBookCriteria"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.04" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvConfirmedBooking"
        android:layout_width="360dp"
        android:layout_height="150dp"
        tools:listitem="@layout/booking_item_list"
        tools:itemCount="1"
        app:layout_constraintTop_toBottomOf="@id/nowBooking"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.04"/>
    <Button
        android:id="@+id/butYetConfirmedBooking"
        android:layout_width="52dp"
        android:layout_height="27dp"
        android:background="@drawable/ic_button_yet"
        app:layout_constraintTop_toBottomOf="@id/rvConfirmedBooking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.04"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWaitBooking"
        android:layout_width="360dp"
        android:layout_height="150dp"
        tools:listitem="@layout/booking_item_list"
        tools:itemCount="1"
        app:layout_constraintTop_toBottomOf="@id/butYetConfirmedBooking"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.04"/>
    <Button
        android:id="@+id/butYetWaitBooking"
        android:layout_width="52dp"
        android:layout_height="27dp"
        android:background="@drawable/ic_button_yet"
        app:layout_constraintTop_toBottomOf="@id/rvWaitBooking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.04"/>


</androidx.constraintlayout.widget.ConstraintLayout>